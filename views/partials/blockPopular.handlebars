<div class="card mb-1 select-card">
  <div class="card-body" onclick="location.href='/users/{{id}}/tweets'" style="cursor: pointer;">

    <div class="row">
      {{!-- 大頭照 --}}
      <div class="col-3 mx-n2">
        <img src="{{avatar}}" alt="avatar" id="avatarPopular">
      </div>
      {{!-- 貼文內容 --}}
      <div class="col mt-2 pl-4">
        <h6 class="card-subtitle mb-2 text-muted">@ {{name}}</h6>
        <p class="card-text popular-text ">{{introduction}}</p>

        {{#if isFollowed}}
          <form action="/followships/{{id}}?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger btn-sm float-right">Unfollow</button>
          </form>

        {{else}}
          <form action="/followships/" method="POST">
            <button type="submit" name="id" value="{{id}}" class="btn btn-primary btn-sm float-right">Follow</button>
          </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>